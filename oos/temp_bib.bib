  langid = {english},
  keywords = {Climate-change ecology,Ecophysiology,notion,Physiology},
  file = {C\:\\Users\\drewv\\Zotero\\storage\\Z23WZMQB\\Jørgensen et al_2022_Extreme escalation of heat failure rates in ectotherms with global warming.pdf;C\:\\Users\\drewv\\Zotero\\storage\\3KNNAP4Z\\s41586-022-05334-4.html}
