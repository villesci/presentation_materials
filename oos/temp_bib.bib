@article{jorgensen_etal22,
  title = {Extreme Escalation of Heat Failure Rates in Ectotherms with Global Warming},
  author = {J{\o}rgensen, Lisa Bjerregaard and {\O}rsted, Michael and Malte, Hans and Wang, Tobias and Overgaard, Johannes},
